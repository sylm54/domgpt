{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "cors-fetch:default",
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",

    "http:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://openrouter.ai/api/v1/chat/completions" }]
    }
  ]
}
